// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String @id @default(uuid())
  completyName String
  cpf          String @unique
  email        String @unique
  password     String
  phoneNumber  String

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  schedule  Schedule[]

  @@map("users")
}

model Service {
  id          String     @id @default(uuid())
  name        String
  description String?
  price       Decimal
  schedule    Schedule[]

  @@map("services")
}

model Schedule {
  id       String   @id @default(uuid())
  datetime DateTime

  service   Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId String

  user   User   @relation(fields: [userId], references: [id])
  userId String

  @@map("schedules")
}
